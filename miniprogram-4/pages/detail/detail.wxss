/* detail.wxss */
.detail-container {
    padding: 20rpx;
    padding-bottom: 120rpx;
  }
  
  .back-btn {
    position: fixed;
    top: 20rpx;
    left: 20rpx;
    width: 60rpx;
    height: 60rpx;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }
  
  .back-btn image {
    width: 40rpx;
    height: 40rpx;
  }
  
  .post-header {
    display: flex;
    align-items: center;
    margin: 20rpx 0;
  }
  
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
  }
  
  .nickname {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .time {
    font-size: 24rpx;
    color: #999;
  }
  
  .post-content {
    margin-bottom: 20rpx;
  }
  
  .food-info {
    margin-bottom: 10rpx;
  }
  
  .cantin {
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 20rpx;
  }
  
  .food-name {
    font-size: 32rpx;
    color: #666;
  }
  
  .content-text {
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  /* 口味偏好样式 */
  .stands-container {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 12rpx;
    margin: 20rpx 0;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .stands-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .stands-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .stand-item {
    background: #f8f8f8;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
  }
  
  .stand-label {
    font-size: 20rpx;
    color: #666;
    margin-right: 5rpx;
  }
  
  .stand-value {
    font-size: 20rpx;
    color: #333;
    font-weight: 500;
  }
  
  .image-list {
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx 0;
  }
  
  .image-list image {
    width: 220rpx;
    height: 220rpx;
    margin: 5rpx;
    border-radius: 8rpx;
  }
  
  .action-bar {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .action-item {
    display: flex;
    align-items: center;
  }
  
  .action-item image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  
  .share-btn {
    font-size: 28rpx;
    color: #666;
    background: none;
    padding: 0;
    line-height: 1;
  }
  
  .share-btn::after {
    border: none;
  }
  
  .comment-section {
    margin-top: 20rpx;
  }
  
  .comment-header {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .comment-list {
    margin-bottom: 100rpx;
  }
  
  .comment-item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .comment-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .comment-content {
    flex: 1;
  }
  
  .comment-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
  }
  
  .comment-nickname {
    font-size: 26rpx;
    font-weight: bold;
  }
  
  .comment-time {
    font-size: 24rpx;
    color: #999;
  }
  
  .comment-text {
    font-size: 26rpx;
    line-height: 1.6;
  }
  
  .comment-input-area {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
  }
  
  .comment-input {
    flex: 1;
    height: 70rpx;
    background: #f5f5f5;
    border-radius: 35rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
  }
  
  .submit-btn {
    margin-left: 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #fff;
    background: #07c160;
    border-radius: 35rpx;
  }
  
  /* 阴影和过渡效果 */
  .action-item:active,
  .submit-btn:active {
    opacity: 0.8;
  }
  
  /* 适配暗黑模式 */
  @media (prefers-color-scheme: dark) {
    .stands-container {
      background: #2c2c2c;
      box-shadow: 0 2rpx 10rpx rgba(255, 255, 255, 0.05);
    }
  
    .stand-item {
      background: #3c3c3c;
    }
  
    .stand-label {
      color: #999;
    }
  
    .stand-value {
      color: #fff;
    }
  
    .comment-input {
      background: #3c3c3c;
      color: #fff;
    }
  }