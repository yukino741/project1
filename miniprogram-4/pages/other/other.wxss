/* 全局容器 */
.container {
    padding: 20px;
    background-color: #f6f7fb;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  /* 头部 */
  .header {
    margin-bottom: 25px;
    text-align: center;
  }
  .title {
    font-size: 22px;
    font-weight: 600;
    color: #333;
    display: block;
  }
  .subtitle {
    font-size: 12px;
    color: #999;
    margin-top: 4px;
    display: block;
  }
  
  /* 按钮组 */
  .btn-group {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30px;
  }
  .meal-btn {
    width: 25% !important;
    font-size: 13px;
    border-radius: 20px;
    background-color: #4a90e2 !important;
  }
  
  /* 加载状态 */
  .loading-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 0;
    color: #888;
    font-size: 14px;
  }
  .loading-spinner {
    width: 30px;
    height: 30px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid #4a90e2;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 10px;
  }
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  /* 结果卡片 */
  .result-card {
    animation: slideUp 0.4s ease-out;
  }
  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
  
  /* AI 对话气泡 */
  .ai-message {
    display: flex;
    margin-bottom: 20px;
    align-items: flex-start;
  }
  .ai-avatar {
    font-size: 24px;
    margin-right: 10px;
    background: #e1eaf5;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-align: center;
    line-height: 40px;
  }
  .ai-bubble {
    background: white;
    padding: 15px;
    border-radius: 4px 16px 16px 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    flex: 1;
  }
  .ai-bubble text {
    font-size: 15px;
    color: #333;
    line-height: 1.6;
  }
  
  /* 食物列表 */
  .food-list {
    background: white;
    border-radius: 12px;
    padding: 15px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  .list-title {
    font-size: 13px;
    color: #999;
    margin-bottom: 10px;
    font-weight: bold;
  }
  .food-item {
    border-bottom: 1px solid #f0f0f0;
    padding: 10px 0;
  }
  .food-item:last-child {
    border-bottom: none;
  }
  .food-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .food-name {
    font-size: 16px;
    font-weight: 500;
    color: #333;
  }
  .match-score {
    font-size: 12px;
    color: #4caf50;
    background: #e8f5e9;
    padding: 2px 6px;
    border-radius: 4px;
  }
  .food-comment {
    font-size: 12px;
    color: #888;
    margin-top: 4px;
    background: #f9f9f9;
    padding: 5px;
    border-radius: 4px;
  }