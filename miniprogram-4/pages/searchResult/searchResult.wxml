<view class="container">
  
  <!-- 情况一：菜品不存在 -->
  <view wx:if="{{status === 'not_found'}}" class="not-found-box">
    <!-- 使用系统自带图标 -->
    <icon type="warn" size="64" color="#C9C9C9"/>
    <view class="msg-box">
      <text class="msg-title">抱歉</text>
      <text class="msg-desc">您搜索的菜品 "{{keyword}}" 不存在</text>
    </view>
    <button class="back-btn" bindtap="goBack">返回首页</button>
  </view>

  <!-- 情况二：菜品存在，展示列表 -->
  <view wx:if="{{status === 'found'}}" class="result-box">
    <view class="header-title">
      菜品 <text style="color:#d81e06;">{{keyword}}</text> 的相关评价：
    </view>
    
    <scroll-view scroll-y="true" class="scroll-list">
      
      <!-- 有数据 -->
      <block wx:if="{{matchedComments.length > 0}}">
        <view class="comment-card" wx:for="{{matchedComments}}" wx:key="index">
          <view class="card-header">
            <text class="dish-name">{{item.foodName || keyword}}</text>
            <text class="post-time">{{item.createTime || '近期'}}</text>
          </view>
          <view class="card-content">
            {{item.content}}
          </view>
          <view class="card-footer">
            <text>用户: {{item.userInfo.nickName || '匿名'}}</text>
          </view>
        </view>
      </block>

      <!-- 库里有菜名，但没有发过相关评论 -->
      <view wx:else class="empty-comment">
        <text>该菜品暂无评论记录</text>
      </view>

    </scroll-view>
  </view>

</view>