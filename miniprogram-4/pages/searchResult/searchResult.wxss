page {
    background-color: #f6f6f6;
  }
  
  .container {
    padding: 20px;
  }
  
  /* --- 未找到样式 --- */
  .not-found-box {
    margin-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .msg-box {
    margin-top: 20px;
    text-align: center;
  }
  .msg-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 8px;
  }
  .msg-desc {
    font-size: 14px;
    color: #888;
  }
  .back-btn {
    margin-top: 40px;
    background-color: #333;
    color: white;
    width: 140px;
  }
  
  /* --- 列表样式 --- */
  .result-box {
    width: 100%;
  }
  .header-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    padding-left: 10px;
    border-left: 4px solid #333;
  }
  
  .scroll-list {
    height: 85vh;
  }
  
  .comment-card {
    background-color: #fff;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 8px;
  }
  
  .dish-name {
    font-weight: bold;
    color: #333;
    font-size: 16px;
  }
  
  .post-time {
    font-size: 12px;
    color: #999;
  }
  
  .card-content {
    font-size: 15px;
    color: #444;
    line-height: 1.6;
    margin-bottom: 10px;
  }
  
  .card-footer {
    text-align: right;
    font-size: 12px;
    color: #999;
  }
  
  .empty-comment {
    text-align: center;
    margin-top: 50px;
    color: #999;
  }